<?xml version="1.0" encoding="utf-8"?>
<!-- 公共的样式 -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 布局 - 正文 -->
    <style name="comm_layout_body" parent="@style/base_layout_fill_fill_vertical">
        <item name="android:id">@id/comm_layout_body</item>
        <item name="android:background">@color/comm_body_backg</item>
    </style>
    
    <!-- 布局 - 正文 - 内容 -->
    <style name="comm_layout_body_content" parent="@style/base_layout_fill_fill_vertical">
        <item name="android:id">@id/comm_layout_bodyContent</item>
    </style>
    
    <!-- 布局 - 正文  - 内容 - 有内边距-->
    <style name="comm_layout_body_content_padding" parent="@style/base_layout_fill_fill_vertical">
        <item name="android:id">@id/comm_layout_bodyContent</item>
        <item name="android:padding">@dimen/comm_layout_body_content_padding</item>
    </style>
    
	<!-- 布局 - 列表项 -->
	<style name="comm_layout_listItem" parent="@style/base_layout_fill_wrap">
	    <item name="android:minHeight">@dimen/comm_layout_listItem_minHeight</item>
	    <item name="android:paddingLeft">@dimen/base_padding_veryLarge</item>
	    <item name="android:paddingTop">@dimen/base_padding_littleSmall</item>
	    <item name="android:paddingRight">@dimen/base_padding_veryLarge</item>
	    <item name="android:paddingBottom">@dimen/base_padding_littleSmall</item>
	    <item name="android:gravity">center_vertical</item>
	</style>
	
	<!-- 布局 - 列表头和尾 -->
	<style name="comm_layout_listHeaderAndFooter" parent="@style/comm_layout_listItem">
	    <item name="android:clickable">true</item>
	</style>
    
    <!-- 布局 - 列表为空时的提示视图 -->
    <style name="comm_layout_listEmptyHint" parent="@style/base_layout_wrap_wrap">
        <item name="android:id">@id/comm_layout_listEmptyHint</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
	    <item name="android:gravity">center</item>  
	    <item name="android:clickable">true</item>
    </style>
    
    <!-- 布局 - 加载中提示 -->
    <style name="comm_layout_loadingHint" parent="@style/base_layout_fill_fill">
        <item name="android:id">@id/comm_layout_loadingHint</item>
        <item name="android:layout_gravity">center</item>
	    <item name="android:gravity">center</item> 
	    <item name="android:clickable">true</item>
         <item name="android:background">@color/comm_body_backg</item>
    </style>

    <!-- 布局 - 正在加载的提示视图 - 默认隐藏的 -->
    <style name="comm_layout_loadingHint_gone" parent="@style/comm_layout_loadingHint">
        <item name="android:visibility">gone</item>
    </style>
    
    
    
	<!-- 列表 -->
	<style name="comm_list" parent="@style/base_layout_fill_wrap">
	    <item name="android:id">@android:id/list</item>
	    <item name="android:divider">@drawable/comm_backg_list_driver</item>
	    <item name="android:cacheColorHint">@color/base_transparent</item>
	    <item name="android:fastScrollEnabled">true</item>
	</style>
    
	<!-- 列表 - 充满的 -->
	<style name="comm_list_fill" parent="@style/base_layout_fill_fill">
	    <item name="android:id">@android:id/list</item>
	    <item name="android:divider">@drawable/comm_backg_list_driver</item>
	    <item name="android:cacheColorHint">@color/base_transparent</item>
	    <item name="android:fastScrollEnabled">true</item>
	</style>
    
	<!-- 列表 - 高度权重1 -->
	<style name="comm_list_weight" parent="@style/base_layout_fill_weight">
	    <item name="android:id">@android:id/list</item>
	    <item name="android:divider">@drawable/comm_backg_list_driver</item>
	    <item name="android:cacheColorHint">@color/base_transparent</item>
	    <item name="android:fastScrollEnabled">true</item>
	</style>
   
	<!-- 列表 - 有左右内边距 -->
	<style name="comm_list_padding" parent="@style/comm_list">
	    <item name="android:paddingLeft">@dimen/comm_list_padding</item>
	    <item name="android:paddingRight">@dimen/comm_list_padding</item>
	</style>
    
	<!-- 列表 - 充满的 - 有左右内边距 -->
	<style name="comm_list_fill_padding" parent="@style/comm_list_fill">
	    <item name="android:paddingLeft">@dimen/comm_list_padding</item>
	    <item name="android:paddingRight">@dimen/comm_list_padding</item>
	</style>
    
	<!-- 列表 - 高度权重1 - 有左右内边距 -->
	<style name="comm_list_weight_padding" parent="@style/comm_list_weight">
	    <item name="android:paddingLeft">@dimen/comm_list_padding</item>
	    <item name="android:paddingRight">@dimen/comm_list_padding</item>
	</style>
	
	
	
	<!-- 按钮 -->
	<style name="comm_button" parent="@style/base_layout_wrap_wrap">
	    <item name="android:gravity">center</item>
	    <item name="android:textColor">@color/base_gray</item>
	    <item name="android:paddingLeft">@dimen/comm_button_paddingLeft</item>
	    <item name="android:paddingRight">@dimen/comm_button_paddingLeft</item>
	</style>
	
	<!-- 按钮 - 正文 -->
	<style name="comm_button_body" parent="@style/comm_button">
	    <item name="android:minWidth">@dimen/comm_button_body_minWidth</item>
	    <item name="android:minHeight">@dimen/comm_button_body_minHeight</item>
	    <item name="android:layout_margin">@dimen/comm_button_body_margin</item>
	</style>
	
	<!-- 按钮 - 正文 - 宽度充满 -->
	<style name="comm_button_body_widthFill" parent="@style/comm_button_body">
	    <item name="android:layout_width">fill_parent</item>
	</style>
	
    <!-- 按钮 - 活动栏 -->
    <style name="comm_button_actionBar" parent="@style/comm_button">
	    <item name="android:minWidth">@dimen/comm_button_actionBar_minWidth</item>
	    <item name="android:minHeight">@dimen/comm_button_actionBar_minHeight</item>
	    <item name="android:layout_height">@dimen/comm_button_actionBar_minHeight</item>
	    <item name="android:layout_margin">@dimen/comm_button_actionBar_margin</item>
    </style>
	
    <!-- 按钮 - 列表项 -->
    <style name="comm_button_listItem" parent="@style/comm_button">
		<item name="android:focusable">false</item>
		<item name="android:minWidth">@dimen/comm_button_listItem_minHeight</item>
		<item name="android:minHeight">@dimen/comm_button_listItem_minHeight</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_height">@dimen/comm_button_actionBar_minHeight</item>
	    <item name="android:layout_margin">@dimen/comm_button_actionBar_margin</item>
		<item name="android:focusableInTouchMode">false</item>
    </style>
    
    <!-- 按钮 - 列表项中的选择按钮 -->
    <style name="comm_button_listItemChoice" parent="@style/comm_button_listItem">
		<item name="android:clickable">false</item>
        <item name="android:id">@id/comm_button_listItemChoice</item>
    </style>
    
    <!-- 编辑器 -->
    <style name="comm_edit" parent="@style/base_layout_weight_wrap">
        <item name="android:background">@drawable/backg_edit_normal</item>
        <item name="android:textSize">@dimen/base_textSize_default</item>
        <item name="android:textColor">@color/base_black</item>
    </style>
    
    <!-- 编辑器 - 账号 -->
    <style name="comm_edit_account" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_account</item>
        <item name="android:maxLength">20</item>
    </style>
    
    <!-- 编辑器 - 密码 -->
    <style name="comm_edit_password" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_password</item>
        <item name="android:maxLength">20</item>
        <item name="android:inputType">textPassword</item>
    </style>
    
    <!-- 编辑器 - 姓名 -->
    <style name="comm_edit_name" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_name</item>
    </style>
    
    <!-- 编辑器 - 手机号 -->
    <style name="comm_edit_mobilePhone" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_mobilePhone</item>
        <item name="android:maxLength">11</item>
        <item name="android:inputType">phone</item>
    </style>
    
    <!-- 编辑器 - 地区 -->
    <style name="comm_edit_area" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_area</item>
    </style>
    
    <!-- 编辑器 - 邮箱 -->
    <style name="comm_edit_email" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    
    <!-- 编辑器 - 公司名称 -->
    <style name="comm_edit_company" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_company</item>
    </style>
    
    <!-- 编辑器 - 发票抬头 -->
    <style name="comm_edit_invoice" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_invoice</item>
    </style>
    
    <!-- 编辑器 - 身份证号 -->
    <style name="comm_edit_idNumber" parent="@style/comm_edit">
        <item name="android:hint">@string/comm_editHint_idNumber</item>
        <item name="android:maxLength">18</item>
    </style>
</resources>